public class RockPaperScissors extends ConsoleProgram
{
    private static final String USER_PLAYER = "User wins!";
    private static final String COMPUTER_PLAYER = "Computer wins!";
    private static final String TIE = "Tie";
        
    private String getWinner(String user, String computer)
    {

        // Return the proper string for the result.
    String USER_PLAYER = "User wins!";
    String COMPUTER_PLAYER = "Computer wins!";
    String TIE = "Tie";

    // Your code here
    
    if (user.equals("rock")){
        if(computer.equals("paper")){
            return COMPUTER_PLAYER;
        }
        if(computer.equals("scissors")){
            return USER_PLAYER;
        }
        else{
            return TIE;
        }
    }
    
    else if (user.equals("paper")){
        if(computer.equals("scissors")){
            return COMPUTER_PLAYER;
        }
        if(computer.equals("rock")){
            return USER_PLAYER;
        }
        else{
            return TIE;
        }
    }
    
    else if (user.equals("scissors")){
        if(computer.equals("rock")){
            return COMPUTER_PLAYER;
        }
        if(computer.equals("paper")){
            return USER_PLAYER;
        }
        else{
            return TIE;
        }
    }
    
    return TIE;
    
    }
    
    public void run()
    {
        Teller();
    }
    
    public void Teller(){
        
            String userinput = readLine("Enter your choice (rock, paper, or scissors):");
        
        if (userinput.equals("")){
            System.out.println("Thanks for playing!");
        }
        else{

        int randnumb = Randomizer.nextInt(1, 3);
        String compinput;
        if (randnumb == 1){
            compinput = "rock";
        }
        else if (randnumb == 2){
            compinput = "paper";
        }
        else{
            compinput = "scissors";
        }
        
        System.out.println("User: " + userinput);
       System.out.println("Computer: " + compinput);
       System.out.println(getWinner(userinput,compinput));
       Teller();
        }
    }
}
