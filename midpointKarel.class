public class MidpointKarel extends SuperKarel
{
    public void run()
    {
        int number = 0;
        while(frontIsClear()){
            move();
            number = number + 1;
            int midptnumb = number / 2;
            
        }
        turnAround();
        moveSpaces(midptnumb);
        turnAround();
        putBall();
    }
    public void moveSpaces(number){
        for (int i = 0; i < number; ++i){
            move();
        }
    }
    public void turnSpaces(number){
        for (int i = 0; i < number; ++i){
            turnLeft();
        }
    }

    

}
