public boolean bracketsMatch(String brackets)
{
    int stringlength = brackets.length();
    boolean domatch = false;
	int leftbrackcount = 0;
	int rightbrackcount = 0;
    for (int i = 0; i < stringlength; i++){
		char stringchar = brackets.charAt(i);
		if(stringchar == '{'){
		
			leftbrackcount++;
		}
		else if (stringchar == '}'){
			rightbrackcount++;
		
		}
	}
	if(stringlength == 0){
	    return true;
	}
	else if (brackets.charAt(0) == '}' || brackets.charAt(stringlength - 1) == '{'){
		return false;
	}
	else if(leftbrackcount == rightbrackcount){
		return true;
	}
	else{
		return false;
	}
}